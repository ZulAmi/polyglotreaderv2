{
  "manifest_version": 3,
  "name": "PolyglotReader - AI Language Learning",
  "version": "1.0.0",
  "description": "Professional language learning tool with AI-powered translation, grammar analysis, and vocabulary enhancement",
  "minimum_chrome_version": "138",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
  "js": ["lang-utils.js", "vocab-utils.js", "ai-utils.js", "ai-enhanced.js", "content.js"],
      "css": ["tooltip.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "PolyglotReader Settings",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ],
